<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <h3>Welcome to Scrummit</h3>
        
        <form class="m-t" name="form" role="form" ng-submit="vm.login()">
        	<div ng-class="{ 'alert': flash, 'alert-success': flash.type === 'success', 'alert-danger': flash.type === 'error' }" ng-if="flash" ng-bind="flash.message"></div>
            <div class="form-group">
                <input type="text" name="username" id="username" ng-model="vm.username" class="form-control" placeholder="Username" required>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" ng-model="vm.password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" ng-disabled="form.$invalid || vm.dataLoading" class="btn btn-primary block full-width m-b">Login</button>
			<img ng-if="vm.dataLoading" src="data:image/gif;base64," />
            <a ui-sref="forgot_password"><small>Forgot password?</small></a>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" ui-sref="register">Create an account</a>
        </form>
        <p class="m-t"> <small>Inspinia web app framework base on Bootstrap 3 &copy; 2014</small> </p>
    </div>
</div>